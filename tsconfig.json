{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "generated/*": ["generated/*"],
      "utils/*": ["src/_shared/utils/*"],
      "components/*": ["src/components/*"],
      "ui/*": ["src/_shared/components/ui/*"],
      "hooks/*": ["src/_shared/hooks/*"],
      "schemas/*": ["src/_shared/schemas/*"],
      "authstore/*": ["src/features/Auth/store/*"],
      "taskmanager/*": ["src/features/TaskManager/*"],
      "auth/*": ["src/features/Auth/*"],
      "profile/*": ["src/features/Profile/*"],
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
